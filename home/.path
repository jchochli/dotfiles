export PP_HOME=~/Development/workspace/billpay/
export JBOSS_HOME=~/Development/bin/jboss-eap-6.4

if [[ "$OSTYPE" == "linux-gnu" ]]; then
  # Linux
  export ECLIPSE_HOME=/opt/eclipse
elif [[ "$OSTYPE" == "darwin"* ]]; then
  # Mac OSX
  export ECLIPSE_HOME=/Users/jchochli/Development/bin/eclipse/Eclipse.app/Contents/Eclipse
else
  # Unknown.
  : # : is noop
fi

# this is the root folder where all globally installed node packages will  go
export NPM_PACKAGES="${HOME}/.npm-packages"
export NODE_PATH="$NPM_PACKAGES/lib/node_modules:$NODE_PATH"
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi
export PATH=$HOME/.jenv/bin:$HOME/.npm-packages/bin:/usr/local/sbin:/usr/local/bin:$PATH:/usr/local/heroku/bin:/usr/local/mysql/bin:$ECLIPSE_HOME
